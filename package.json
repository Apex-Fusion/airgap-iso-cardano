{
  "name": "airgap-iso-cardano",
  "version": "1.0.0",
  "description": "AirGap Cardano isolated module for secure offline transaction signing",
  "main": "build/dist/index.js",
  "types": "build/dist/index.d.ts",
  "scripts": {
    "dev": "npx tsc --watch",
    "build": "npx tsc -p config/tsconfig.build.json",
    "build:bundle": "npm run build && browserify build/dist/index.js -s cardano -o build/airgap-iso-cardano.js",
    "build:airgap": "npm run build:bundle && node scripts/build/sign-module.js --sign build/airgap-iso-cardano.js",
    "bundle:airgap:zip": "npm run build:airgap && cd build && zip -r airgap-iso-cardano.zip temp-module && cd ..",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest src/__tests__",
    "test:airgap": "jest test/v1",
    "test:integration": "jest --testNamePattern=\"integration\"",
    "test:security": "jest --testNamePattern=\"security\"",
    "test:performance": "jest --testNamePattern=\"performance\"",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern 'src/__tests__/**' --ignore-pattern 'src/**/*.test.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern 'src/__tests__/**' --ignore-pattern 'src/**/*.test.ts' --fix",
    "typecheck": "npx tsc --noEmit -p config/tsconfig.json",
    "clean": "rm -rf build dist",
    "setup": "bash scripts/setup/setup-test-keys.sh",
    "generate-keypair": "node scripts/build/sign-module.js --generate-keys",
    "sign-module": "node scripts/build/sign-module.js",
    "earthly:build": "earthly +build",
    "earthly:test": "earthly +test",
    "earthly:test:integration": "earthly +test-integration",
    "earthly:test:e2e": "earthly +test-e2e",
    "earthly:test:security": "earthly +test-security",
    "earthly:test:performance": "earthly +test-performance",
    "earthly:ci": "earthly +ci"
  },
  "keywords": [
    "airgap",
    "cardano",
    "crypto",
    "blockchain",
    "offline",
    "signing",
    "module"
  ],
  "author": "AirGap Contributors",
  "license": "MIT",
  "dependencies": {
    "@airgap/coinlib-core": "^0.13.40",
    "@airgap/module-kit": "^0.13.21",
    "@airgap/serializer": "^0.13.21",
    "@stablelib/blake2b": "^1.0.1",
    "@stablelib/ed25519": "^1.0.3",
    "@stablelib/sha256": "^1.0.1",
    "@stricahq/bip32ed25519": "^1.1.1",
    "@stricahq/typhonjs": "^3.0.0",
    "bip39": "^3.0.4",
    "buffer": "^6.0.3",
    "cbor-js": "^0.1.0"
  },
  "devDependencies": {
    "@cardano-sdk/crypto": "^0.3.0",
    "@emurgo/cardano-serialization-lib-nodejs": "^14.1.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "browserify": "^17.0.1",
    "cardano-crypto.js": "^6.1.2",
    "esbuild": "^0.25.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "lucid-cardano": "^0.10.11",
    "sinon": "^20.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
